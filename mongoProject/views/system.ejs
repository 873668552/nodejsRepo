<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/stylesheets/css/sys.min.css">
    <title>管理员<%= admin %></title>
</head>
<body>
    <!-- 保存用户的特权 -->
    <% if(type){ %>
        <div id="type_div" style="display:none"><%= type %></div>
        <div id="username_div" style="display:none"><%= admin %></div>
        <script>
            localStorage.setItem('adminType',document.getElementById('type_div').innerHTML);
            localStorage.setItem('admin',document.getElementById('username_div').innerHTML);
        </script>
    <% } %>
    <!-- top -->
    <div id="topDiv">
        <ul id="uplode_ul">...</ul>
        <div id="loginout_div">注销</div>
        <% if(img){ %>
            <img id="icon_img" src=<%= img %> alt="">
        <% }else{ %>
            <img id="icon_img" src="/images/icon.png" alt="">
        <% } %>
        <h1> 欢迎<%= admin %>登录 </h1>
    </div>

    <!-- middle -->
    <div id="middleDiv">
        <div class="midLeft">
            <ul class="info_ul">
                <li class="info_admin">用户信息
                    <ol class="admin_ol">
                        <li>修改密码</li>
                        <li>添加管理员</li>
                        <li>删除管理员</li>
                    </ol>
                </li>
                <li class="info_option">操作权限
                    <ol class="option_ol">
                        <li>查看全部</li>
                        <li>添加商品</li>
                    </ol>
                </li>
            </ul>
        </div>
        <div class="midRight">
            
        </div>
    </div>

    <!-- footer -->
    <div class="footer"></div>

</body>
<script src="javascripts/jquery.js"></script>
<script src="javascripts/viewStyle/system.js"></script>
</html>